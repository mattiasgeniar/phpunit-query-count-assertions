{
    "name": "mattiasgeniar/phpunit-query-count-assertions",
    "description": "A custom assertion for phpunit that allows you to count the amount of SQL queries used in a test. Can be used to enforce certain performance characteristics (ie: limit queries to X for a certain action).",
    "keywords": [
        "mattiasgeniar",
        "phpunit-query-count-assertions",
        "laravel",
        "symfony",
        "doctrine",
        "phalcon",
        "testing",
        "queries"
    ],
    "homepage": "https://github.com/mattiasgeniar/phpunit-query-count-assertions",
    "license": "MIT",
    "authors": [
        {
            "name": "Mattias Geniar",
            "email": "m@ttias.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2"
    },
    "suggest": {
        "illuminate/database": "Required for Laravel driver support (^11.0|^12.0)",
        "doctrine/dbal": "Required for Doctrine/Symfony driver support (^3.0|^4.0)",
        "psr/log": "Required for Doctrine query logging middleware"
    },
    "require-dev": {
        "doctrine/dbal": "^4.0",
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.18",
        "orchestra/testbench": "^9.0|^10.0",
        "phalcon/phalcon": "^6.0",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Mattiasgeniar\\PhpunitQueryCountAssertions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mattiasgeniar\\PhpunitQueryCountAssertions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse --memory-limit=2G",
        "test": "vendor/bin/phpunit --colors=always",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [],
            "aliases": {}
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
