includes:
    - phpstan-baseline.neon
    - vendor/larastan/larastan/extension.neon

parameters:
    level: 5
    paths:
        - src
    ignoreErrors:
        # Doctrine and Phalcon are optional dependencies - their classes aren't installed in dev
        -
            identifier: class.notFound
            paths:
                - src/Drivers/DoctrineConnection.php
                - src/Drivers/DoctrineDriver.php
                - src/Drivers/PhalconConnection.php
                - src/Drivers/PhalconDriver.php
    tmpDir: build/phpstan
    checkModelProperties: true
