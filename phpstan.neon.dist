includes:
    - phpstan-baseline.neon
    - vendor/larastan/larastan/extension.neon

parameters:
    level: 5
    paths:
        - src
    excludePaths:
        # Doctrine and Phalcon drivers use optional dependencies
        - src/Drivers/DoctrineConnection.php
        - src/Drivers/DoctrineDriver.php
        - src/Drivers/DoctrineQueryLogger.php
        - src/Drivers/PhalconConnection.php
        - src/Drivers/PhalconDriver.php
    tmpDir: build/phpstan
    checkModelProperties: true
